@model TrackerModuleV1._0.Models.PTM.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt>
            @Html.DisplayName("Collaborators")
        </dt>
        <table class="table">
            <dd>
            <tr>
                <th>Full Name</th>
                <th>JobRole</th>
            </tr>
            @foreach (var item in Model.users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobRole)
                    </td>
                </tr>
            }
            </dd>

            @*<dt>
                @Html.DisplayNameFor(model => model.UserId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserId)
            </dd>*@
        </table>
    </dl>
</div>
<div class="form-group" style="padding:20px;">
        @Html.Label("Select Level", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.TextBox("level",1 ,new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
           <input type="button" class="btn btn-info" value="Search" />
        </div>
</div>
       

<div style="padding:20px;">
    <table class="table table-bordered table-responsive table-hover">
        <thead>Project Description</thead>
        <tbody>
            <tr>
                <th>Level</th>
                <th>NovenaTec PartNumber</th>
                <th>Customer Part Number</th>
                <th>Suplier</th>
            </tr>
            @foreach (var item in Model.Levels)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.levelId)</td>
                    <td>NovenaTec PartNumber</td>
                    <td>Customer Part Number</td>
                    <td>Suplier</td>
                </tr>
            }
            </tbody>

    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProjectId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
